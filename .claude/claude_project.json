    "/generate_all_changes": "../.gherked/commands/generate_all_changes.md"
  },
  "templates": {
    "story_checklist": "../.gherked/md_templates/story_checklist.md",
    "stories_status": "../.gherked/md_templates/stories_status.md",
    "changes": "../.gherked/md_templates/changes_template.md",
    "tech_stack": "../.gherked/md_templates/tech_stack.md"
