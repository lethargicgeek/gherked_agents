{
  "name": "Gherked Agents",
  "description": "A structured agent system for transforming user stories into comprehensive specifications using Gherkin scenarios",
  "version": "1.0.0",
  "agents": {
    "0_initializer": "../.gherked/agents/0_initializer_agent.md",
    "1_stories": "../.gherked/agents/1_stories_agent.md",
    "2_role_gherkins": "../.gherked/agents/2_role_gherkins_agent.md",
    "3_user_interface_context": "../.gherked/agents/3_user_interface_context_agent.md",
    "4_architecture_context": "../.gherked/agents/4_architecture_context_agent.md",
    "5_component_gherkins": "../.gherked/agents/5_component_gherkins_agent.md",
    "6_test_scripts": "../.gherked/agents/6_test_scripts_agent.md",
    "7_conflict_checker": "../.gherked/agents/7_conflict_checker_agent.md"
  },
  "commands": {
    "/0_init": "../.gherked/commands/0_init.md",
    "/1_stories_generate_story": "../.gherked/commands/1_stories_generate_story.md",
    "/2_role_gherkins_generate_changes": "../.gherked/commands/2_role_gherkins_generate_changes.md",
    "/3_user_interface_context_generate_changes": "../.gherked/commands/3_user_interface_context_generate_changes.md",
    "/4_architecture_context_generate_changes": "../.gherked/commands/4_architecture_context_generate_changes.md",
    "/5_component_gherkins_generate_changes": "../.gherked/commands/5_component_gherkins_generate_changes.md",
